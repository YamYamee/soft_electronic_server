# 자세 인식 WebSocket 서버 환경 설정 예시
# 이 파일을 .env로 복사하고 필요에 따라 값을 수정하세요

# ========================================
# 서버 기본 설정
# ========================================
SERVER_HOST=3.34.159.75
SERVER_PORT=8765
SERVER_PING_INTERVAL=30
SERVER_PING_TIMEOUT=10

# ========================================
# 데이터베이스 설정
# ========================================
DATABASE_PATH=posture_data.db
DATABASE_BACKUP_ENABLED=true
DATABASE_BACKUP_INTERVAL=3600

# ========================================
# 머신러닝 모델 설정
# ========================================
MODEL_PATH=model_lr.joblib
MODEL_CONFIDENCE_THRESHOLD=0.1
MODEL_FALLBACK_ENABLED=true

# ========================================
# 로깅 설정
# ========================================
# 로그 레벨: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
LOG_FILE=posture_server.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5
LOG_CONSOLE_ENABLED=true

# ========================================
# 성능 및 모니터링 설정
# ========================================
PERFORMANCE_STATS_INTERVAL=60
MAX_CLIENTS=100
MAX_RESPONSE_TIME_MS=5000

# ========================================
# FSR 센서 설정
# ========================================
FSR_SENSOR_COUNT=11
FSR_VALUE_MIN=0
FSR_VALUE_MAX=1024
FSR_VALIDATION_ENABLED=true

# ========================================
# 보안 설정 (향후 확장용)
# ========================================
ENABLE_CLIENT_AUTH=false
CLIENT_AUTH_TOKEN=your_secret_token_here
CORS_ENABLED=true
CORS_ORIGINS=*

# ========================================
# 개발/디버그 설정
# ========================================
DEBUG_MODE=false
TEST_MODE=false
DUMMY_MODEL_ENABLED=false

# ========================================
# 데이터 저장 설정
# ========================================
SAVE_RAW_DATA=true
SAVE_PREDICTIONS=true
DATA_RETENTION_DAYS=30

# ========================================
# 알림 설정 (향후 확장용)
# ========================================
NOTIFICATION_ENABLED=false
SLACK_WEBHOOK_URL=
EMAIL_NOTIFICATIONS=false

# ========================================
# API 설정 (REST API 확장용)
# ========================================
REST_API_ENABLED=false
REST_API_PORT=8080
API_RATE_LIMIT=100

# ========================================
# 클러스터 설정 (다중 서버 환경용)
# ========================================
CLUSTER_MODE=false
CLUSTER_ID=server001
REDIS_URL=redis://localhost:6379